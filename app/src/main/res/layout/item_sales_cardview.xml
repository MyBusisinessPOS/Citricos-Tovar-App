<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                app:civ_border_color="@color/purple_500"
                app:civ_fill_color="@color/purple_500"
                android:id="@+id/img_producto_venta"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/textView_producto_descripcion_venta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Limon de primera"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/img_producto_venta"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_producto_codigo_venta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="LIMOP"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                app:layout_constraintStart_toEndOf="@+id/img_producto_venta"
                app:layout_constraintTop_toBottomOf="@+id/textView_producto_descripcion_venta" />

            <TextView
                android:id="@+id/textView_producto_precio_venta"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="$40.00"
                android:textColor="@color/colorPrimary"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                app:layout_constraintStart_toEndOf="@+id/img_producto_venta"
                app:layout_constraintTop_toBottomOf="@+id/textView_producto_codigo_venta" />

            <TextView
                android:id="@+id/textView_producto_cantidad_venta"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:text="KG 5"
                android:textSize="16dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                app:layout_constraintStart_toEndOf="@+id/textView_producto_precio_venta"
                app:layout_constraintTop_toBottomOf="@+id/textView_producto_codigo_venta" />

            <TextView
                android:id="@+id/textView_producto_total_venta"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:textSize="16dp"
                android:text="$200.00"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_producto_codigo_venta" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>